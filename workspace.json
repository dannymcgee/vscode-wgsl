{
	"version": 2,
	"projects": {
		"client": {
			"root": "packages/client",
			"sourceRoot": "packages/client/src",
			"projectType": "application",
			"targets": {
				"build": {
					"executor": "@vscode-devkit/nx:build",
					"options": {
						"additionalTargets": [
							"grammar:build",
							"grammar-ast:build",
							"server:build"
						],
						"assets": ["package.json", "README.md", "wgsl.config.json"],
						"entryPoint": "src/index.ts",
						"outputPath": "dist/vscode-wgsl",
						"outputFile": "main.js",
						"package": false,
						"install": false
					}
				},
				"lint": {
					"executor": "@nrwl/linter:eslint",
					"options": {
						"lintFilePatterns": ["packages/client/**/*.ts"],
						"maxWarnings": 0
					}
				}
			}
		},
		"grammar": {
			"root": "packages/grammar",
			"sourceRoot": "packages/grammar/src",
			"projectType": "library",
			"targets": {
				"build": {
					"executor": "@vscode-devkit/nx:grammar",
					"options": {
						"name": "wgsl",
						"entryPoint": "packages/grammar/src/index.ts",
						"outputPath": "dist/vscode-wgsl"
					}
				},
				"lint": {
					"executor": "@nrwl/linter:eslint",
					"options": {
						"lintFilePatterns": ["packages/grammar/**/*.ts"]
					}
				}
			}
		},
		"grammar-ast": {
			"root": "packages/grammar-ast",
			"sourceRoot": "packages/grammar-ast/src",
			"projectType": "library",
			"targets": {
				"build": {
					"executor": "@vscode-devkit/nx:grammar",
					"options": {
						"name": "wgsl-ast",
						"entryPoint": "packages/grammar-ast/src/index.ts",
						"outputPath": "dist/vscode-wgsl"
					}
				},
				"lint": {
					"executor": "@nrwl/linter:eslint",
					"options": {
						"lintFilePatterns": ["packages/grammar-ast/**/*.ts"]
					}
				}
			}
		},
		"parser": {
			"root": "packages/parser",
			"projectType": "library",
			"sourceRoot": "packages/parser/src",
			"targets": {
				"test": {
					"executor": "@nxrs/cargo:test"
				},
				"lint": {
					"executor": "@nxrs/cargo:clippy",
					"options": {
						"fix": false,
						"failOnWarnings": true,
						"noDeps": true
					}
				}
			}
		},
		"parser_v2": {
			"root": "packages/parser_v2",
			"projectType": "library",
			"sourceRoot": "packages/parser_v2/src",
			"targets": {
				"test": {
					"executor": "@nxrs/cargo:test",
					"options": {}
				},
				"lint": {
					"executor": "@nxrs/cargo:clippy",
					"options": {
						"fix": false,
						"failOnWarnings": true,
						"noDeps": true
					}
				}
			}
		},
		"server": {
			"root": "packages/server",
			"projectType": "application",
			"sourceRoot": "packages/server/src",
			"targets": {
				"build": {
					"executor": "@nxrs/cargo:build",
					"options": {
						"outDir": "dist/vscode-wgsl",
						"release": false,
						"toolchain": "nightly"
					},
					"configurations": {
						"production": {
							"outDir": "dist/vscode-wgsl",
							"release": true,
							"toolchain": "nightly"
						}
					}
				},
				"test": {
					"executor": "@nxrs/cargo:test"
				},
				"lint": {
					"executor": "@nxrs/cargo:clippy",
					"options": {
						"fix": false,
						"failOnWarnings": true,
						"noDeps": true
					}
				}
			}
		},
		"utils": {
			"root": "packages/utils",
			"projectType": "library",
			"sourceRoot": "packages/utils/src",
			"targets": {
				"test": {
					"executor": "@nxrs/cargo:test",
					"options": {}
				},
				"lint": {
					"executor": "@nxrs/cargo:clippy",
					"options": {
						"fix": false,
						"failOnWarnings": true,
						"noDeps": true
					}
				}
			}
		},
		"wgsl_plus": {
			"root": "packages/wgsl-plus",
			"projectType": "library",
			"sourceRoot": "packages/wgsl-plus/src",
			"targets": {
				"test": {
					"executor": "@nxrs/cargo:test",
					"options": {}
				},
				"lint": {
					"executor": "@nxrs/cargo:clippy",
					"options": {
						"fix": false,
						"failOnWarnings": true,
						"noDeps": true
					}
				}
			}
		}
	},
	"cli": {
		"defaultCollection": "@nrwl/workspace"
	}
}
